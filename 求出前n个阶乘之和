using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jiecheng
{
    class Program
    {
        static void Main(string[] args)
        {
            int x = Convert.ToInt32(Console.ReadLine());
            float y = 0;
            for (int i = 1; i <= x; i++)
            {
                float a = 1;
                for (int j = 1; j <= i; j++)
                {
                    a = j * a;
                }
                y += a;
            }        
            Console.WriteLine(y.ToString());
            Console.Read();
        }
    }
}
